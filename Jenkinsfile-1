pipeline {
    agent any
    environment {
        JAVA_HOME = "C:/Program Files/Java/jdk-17.0.12"  // Set the correct path to your Java installation
        PATH = "${JAVA_HOME}/bin:${env.PATH}"
    }
    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
        stage('Scan') {
            steps {
                withSonarQubeEnv('Sq1') {
                    bat "mvnw.cmd clean org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.0.2155:sonar"
                }
            }
        }
    }
}
